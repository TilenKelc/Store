<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control custom-textbox", placeholder: "Email address", required: true %>
    <%= f.password_field :password, autocomplete: "current-password", id: "inputPassword", class: "form-control custom-textbox", placeholder: "Password", required: true %>
    <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>

    <% -if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    <% end %>
    <hr>
    <p>Don't have an account?</p>
    <%= link_to "Sign up New Account", new_registration_path(resource_name), class: "btn btn-primary btn-block text-white" %><br />
  <% end %>
</div>
