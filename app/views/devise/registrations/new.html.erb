<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign up</h1>
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "user-email", class: "form-control custom-textbox", placeholder: "Email address", required: true %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id: "user-pass", class: "form-control custom-textbox", placeholder: "Password", required: true %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "user-repeatpass", class: "form-control custom-textbox", placeholder: "Repeat Password", required: true %>
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    <hr>
    
    <% -if controller_name != "sessions" %>
      <%= link_to "Log in", new_session_path(resource_name) %>
    <% end %>
  <% end %>
</div>